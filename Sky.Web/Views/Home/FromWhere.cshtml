@using Sky.Models

@{
    ViewBag.Title = "TimeLine";
}
@section Head
{
    <!-- 本页样式表 -->
    <link href="~/Content/css/timeline.css" rel="stylesheet" />
}
<!-- 主体（一般只改变这里的内容） -->
<div class="blog-body">
    <div class="blog-container">
        <blockquote class="layui-elem-quote sitemap layui-breadcrumb shadow">
            <a href="/" title="网站首页">网站首页</a>
            <a href="@Url.Action("TimeLine")" title="点点滴滴">点点滴滴</a>
            <a><cite>时光轴</cite></a>
        </blockquote>
        <div class="blog-main">
            <div class="child-nav shadow">
                <a class="child-nav-btn" href="/Home/TimeLine/">时光轴</a>
                <a class="child-nav-btn child-nav-btn-this" href="/Home/FromWhere/">网站来源分析</a>
            </div>         
            <div class="timeline-box shadow">
                <div class="timeline-main" id="map">
                    <!-- 为ECharts准备一个具备大小（宽高）的Dom -->
                    <div id="main" style="width: 1000px;height: 600px;"></div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts
{
    <script src="~/Scripts/plug/echarts/echarts.js"></script>
    <script>
        layui.use(['jquery','layer'], function () {
            var $ = layui.jquery;
            var layer = layui.layer;          
                    
            var worldMapContainer = document.getElementById('main');
            //自适应宽高
            var myChartContainer = function () {
                worldMapContainer.style.width = $('#map').css('width');
                worldMapContainer.style.height = $('#map').css('height');
            };
            $(function () {
                //自适应宽高
                myChartContainer();
                // 基于准备好的dom，初始化echarts实例
                var myChart = echarts.init(worldMapContainer);
                var option = {
                    title: {
                        text: '网站访问来源省份统计',
                        //subtext: 'FromWhere',
                        x: 'center'
                    },
                    tooltip: {
                        trigger: 'item',
                        formatter: "{a} <br/>{b} : {c} ({d}%)"
                    },
                    //legend: {
                    //    orient: 'vertical',
                    //    top: '10%',
                    //    left:'1%'

                    //},
                    series: [
                        {
                            name: '省份',
                            type: 'pie',
                            radius: [0, '60%'],
                            center: ['50%', '50%'],
                            data: [

                            ],
                            itemStyle: {
                                emphasis: {
                                    shadowBlur: 10,
                                    shadowOffsetX: 0,
                                    shadowColor: 'rgba(0, 0, 0, 0.5)'
                                }
                            }
                        }
                    ]
                };              
                $.ajax({
                    url: '/Home/GetHitsFromProvice'
                    , type: 'Get'
                    , datType: "JSON"
                    , data: {}
                    , success: function (result) {
                        if (result.Result) {
                            var name = [];
                            var data = [];
                            var datas = result.Data;
                            for (var i in datas) {
                                name.push(datas[i].key);
                                data.push({ name: datas[i].key, value: datas[i].value });
                            }
                            //option.legend.data = name;
                            option.series[0].data = data;
                            myChart.setOption(option);
                            //浏览器大小改变时重置大小
                            window.onresize = function () {
                                myChartContainer();
                                myChart.resize();
                            };
                        } else {
                            layer.msg(result.Message);
                        }
                    }
                });

            });
        });
    </script>
}
