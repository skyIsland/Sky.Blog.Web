@using Sky.Models
@{
    ViewBag.Title = "Index";
    IList<ArticleClass> allClass = ViewBag.AllClass;
}
<fieldset id="dataConsole" class="layui-elem-field layui-field-title">
    <legend>控制台</legend>
    <div class="layui-field-box">
        <div id="articleIndexTop">
            <form class="layui-form layui-form-pane" action="">
                <div class="layui-form-item" style="margin: 0; margin-top: 15px;">
                    <div class="layui-inline">
                        <label class="layui-form-label">分类</label>
                        <div class="layui-input-inline">
                            <select name="articleClass" lay-filter="articleClass">
                                @foreach (var item in allClass)
                                {
                                    <option value="@item.Id">@item.ClassName</option>
                                }                              
                            </select>
                        </div>
                        <label class="layui-form-label">关键词</label>
                        <div class="layui-input-inline">
                            <input type="text" name="keywords" autocomplete="off" class="layui-input">
                        </div>
                        <div class="layui-input-inline" style="width: auto">
                            <button class="layui-btn" lay-submit lay-filter="formSearch">搜索</button>
                        </div>
                    </div>
                    <div class="layui-inline">
                        <div class="layui-input-inline" style="width: auto">
                            <a id="addArticle" class="layui-btn layui-btn-normal">发表文章</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</fieldset>
<fieldset id="dataList" class="layui-elem-field layui-field-title sys-list-field">
    <legend style="text-align: center;">文章列表</legend>
    <div class="layui-field-box">
        <div id="dataContent" class="">
            <!--内容区域 ajax获取-->
            <table class="layui-table" id="demo" lay-filter="demo"></table>
        </div>
    </div>
</fieldset>
@section Scripts
{
    <script type="text/html" id="IsTopTpl">
        <form class="layui-form" action="">
            <div class="layui-form-item" style="margin:0;">
                {{#  if(d.IsTop){ }}
                   <input type="checkbox" name="top" title="置顶" lay-filter="top" checked disabled>
                {{#  } else { }}
                   <input type="checkbox" name="top" title="置顶" lay-filter="top" disabled>
                {{#  } }}
               
            </div>
        </form>
    </script>
    <script type="text/html" id="IsRecommendTpl">
        <form class="layui-form" action="">
            <div class="layui-form-item" style="margin:0;">
                {{#  if(d.IsTop){ }}
                <input type="checkbox" name="top" title="推荐" lay-filter="recommend" checked disabled>
                {{#  } else { }}
                <input type="checkbox" name="top" title="推荐" lay-filter="recommend" disabled>
                {{#  } }}
            </div>
        </form>    
    </script>
    <script type="text/html" id="status">    
        {{#  if(d.State=='0'){ }}
        <span style="color: #F581B1;">草稿</span>
        {{#  } else { }}
        <span style="color: #F581B1;">发布</span>
        {{#  } }}
    </script>
    <script type="text/html" id="barDemo">
        <a class="layui-btn layui-btn-mini" lay-event="edit">编辑</a>
        <a class="layui-btn layui-btn-danger layui-btn-mini" lay-event="del">删除</a>
    </script>
    <script type="text/javascript">
        layui.config({
            base: '/Scripts/'
        }).use('article');
    </script>

}
